%html
  %head
    %meta{ :"http-equiv" => "Content-Type", :content => "text/html; charset=UTF-8" }
  %body{ :leftmargin => "0", :marginwidth => "0", :topmargin => "0", :marginheight => "0", :offset => "0",  :style => "-webkit-text-size-adjust: none;margin: 0;padding: 0;  width: 100% !important; background: #E65540;" }
    %center
      %table{ :cellspacing => "0", :cellpadding => "0", :border => "0",  :style => "border-right-width:1px;border-right-style:solid;border-right-color:#e9e9e9;border-left-width:1px;border-left-style:solid;border-left-color:#e9e9e9;border-top-width:1px;border-top-style:solid;border-top-color:#e9e9e9;border-bottom-width:1px;border-bottom-style:solid;border-bottom-color:#e9e9e9; background-color:#ffffff;font-size:12px;line-height:14px;color:#3d4b4b;font-family:Helvetica,Arial,sans-serif; width: 680px; margin-top: 20px; margin-bottom: 20px;" }
        %tbody
          %tr
            %td
              %table{ :width => "100%", :style => "" }
                %tbody
                  %tr
                    %td{ :style => "text-align: center; padding-top: 20px; padding-left: 30px; padding-bottom: 20px; padding-right: 30px;" }
                      %h1{ :style => "font-weight: bold; text-align: center; margin: 0; color: #666; font-size: 30px; text-transform: uppercase;"} The Passwordless App
              %hr{ :style => "background-color:#e9e9e9; border:0; color:#e9e9e9; height:1px; clear: both; margin-top: 0; margin-right: 0; margin-bottom: 15px; margin-left: 0;" }
              - if content_for?(:message_title)
                %h1{ :style => "font-size: 22px; line-height: 24px; font-weight: normal; text-align: center;" }= yield(:message_title)
                %hr{ :style => "background-color:#e9e9e9; border:0; color:#e9e9e9; height:1px; clear: both; margin-top: 15px;" }
              %div{ :style => "margin-top:0px;margin-right:0px;margin-bottom:0px;margin-left:0px; clear: both; padding-top: 20px; padding-left: 30px; padding-bottom: 20px; padding-right: 30px; line-height: 18px;" }
                = yield